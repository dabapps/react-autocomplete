{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "lib/@types"]
  },
  "include": ["lib", "examples"]
}
